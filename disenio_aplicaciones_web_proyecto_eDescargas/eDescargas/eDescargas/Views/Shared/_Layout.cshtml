<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eDescargas Administracion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            -->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Esto funciona asi ActionLink("NombreAPresentar","ActionALlamar","Controller") -->
                    <!-- INIT Logo para volver a inicio -->
                    <li>
                        <a class="navbar-brand" href="@Url.Action("Index","Home")">
                            <img src="https://img.icons8.com/officel/30/000000/next-generation-badge.png" width="30" height="30" class="d-inline-block align-top" />
                        </a>
                    </li>
                    <!-- INIT Logo para volver a inicio -->
                    <!-- INIT Menu Opcion: Seguridad -->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Seguridad
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- Usuarios-->
                            <li>@Html.ActionLink("Usuarios", "UsuarioLanding", "Usuario")</li>
                            <!-- Cambiar contraseniaa-->
                            <li>@Html.ActionLink("Cambiar Contraseña", "Register", "Account")</li>
                        </ul>
                    </li>
                    <!-- END Menu Opcion: Seguridad -->
                    <!-- INIT Menu Opcion: Administracion -->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Administracion
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- Consecutivos -->
                            <li>@Html.ActionLink("Consecutivos", "Index", "Consecutivo")</li>
                            <!-- Parametros -->
                            <li>@Html.ActionLink("Parametros", "Index", "Parametro")</li>
                            <!-- Peliculas -->
                            <li>@Html.ActionLink("Peliculas", "Index", "Pelicula")</li>
                            <!-- Libros -->
                            <li>@Html.ActionLink("Libros", "Index", "Libro")</li>
                            <!-- Musica -->
                            <li>@Html.ActionLink("Musica", "Index", "Musica")</li>
                        </ul>
                    </li>
                    <!-- END Menu Opcion: Administracion -->
                    <!-- INIT Menu Opcion: Consultas -->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Consultas
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- Bitacora -->
                            <li>@Html.ActionLink("Bitacora", "Index", "Bitacora")</li>
                            <!-- Transacciones -->
                            <li>@Html.ActionLink("Transacciones", "Index", "Transaccion")</li>
                            <!-- Descargas -->
                            <li>@Html.ActionLink("Descargas", "Index", "Descarga")</li>
                            <!-- Errores -->
                            <li>@Html.ActionLink("Errores", "Index", "Error")</li>
                        </ul>
                    </li>
                    <!-- END Menu Opcion: Consultas -->
                    <!-- INIT opcion Nosotros -->
                    <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                    <!-- END opcion Nosotros -->
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - eDescargas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
